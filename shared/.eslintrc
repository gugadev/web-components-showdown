
{
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended"],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": "off",
    "comma-dangle": "off",
    "no-console": "off",
    "import/prefer-default-export": "off",
    "@typescript-eslint/indent": ["error", 2]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "page": true,
    "browser": true,
    "context": true,
    "jestPuppeteer": true
  }
}